// declaração de uma função chamada incrementa
function incrementa() {
    // mensagem que será exibida no console quando a função for chamada
    console.log("inside the function");
}

// chamada da função incrementa
incrementa();

let valor = 20;

// função com parâmetros
function saudacao(nome) {
    console.log("Olá, " + nome);
}

saudacao("daniel"); 


// declaração de uma função chamada increment
function increment(a, b) {
    // somando os parâmetros 'a' e 'b'
    return a + b;

}

// chamada da função increment com os valores de 'a' e 'b' como argumentos
let result = increment(3, 29);
console.log(result)

// expressões de Função:

// definindo a função mult
function mult(a, b) {
    // retornando a multiplicação de a e b
    return a * b;
}

// chamando a função com os argumentos 3 e 4
let resultado = mult(3, 4);


console.log(resultado); 

